{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/derrickoswald/CIMApplication/master/json-schema/ComplexSchema.json",
    "description": "Complex number.",
    "type": ["object", "string", "number"],
    "additionalProperties": false,
    "properties": {
        "re": {
            "default": 0.0,
            "type": "number",
            "description": "the real part"
        },
        "im": {
            "default": 0.0,
            "type": "number",
            "description": "the imaginary part"
        }
    },
    "pattern": "^((?:[+-]?(?:[0-9]*\\.?[0-9]*)|(?:\\.[0-9]+))(?:[Ee][+-]?[0-9]+)?)?[\\s]*([+-<])[\\s]*[ij]?((?:[+-]?(?:[0-9]*\\.?[0-9]*)|(?:\\.[0-9]+))(?:[Ee][+-]?[0-9]+)?)([ijdÂ°])?$"
}
