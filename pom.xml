<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.ninecode.cim</groupId>
    <artifactId>CIMApplication</artifactId>
    <!-- version>${version.dependency.scala}-${version.dependency.spark}-CIMAPPLICATION_VERSION</version -->
    <version>2.11-2.4.3-2.5.0</version>
    <packaging>pom</packaging>
    <name>CIM Application Multimodule</name>

    <properties>

        <encoding>UTF-8</encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <!-- Scala versions -->
        <version.dependency.scala>2.11</version.dependency.scala>
        <version.dependency.scalalibrary>2.11.12</version.dependency.scalalibrary>

        <!-- Spark versions -->
        <version.dependency.hadoop>2.7.6</version.dependency.hadoop>
        <version.dependency.spark>2.4.3</version.dependency.spark>
        <version.dependency.cassandra_spark>2.4.1</version.dependency.cassandra_spark>
        <version.dependency.cimreader>2.11-2.4.3-3.6.0</version.dependency.cimreader>

        <!-- Component versions -->
        <version.dependency.javaee>8.0.1</version.dependency.javaee>
        <version.dependency.tomee>8.0.0-M3</version.dependency.tomee>
        <version.dependency.json>1.1.4</version.dependency.json>
        <version.dependency.sqlite>3.21.0.1</version.dependency.sqlite>
        <version.dependency.scopt>3.7.0</version.dependency.scopt>
        <version.dependency.java-driver-core>4.2.0</version.dependency.java-driver-core>

        <!-- test versions -->
        <version.dependency.junit>4.12</version.dependency.junit>
        <version.dependency.scalatest>3.0.5</version.dependency.scalatest>

        <!-- plugin versions -->
        <version.dependency.maven-jar-plugin>3.1.2</version.dependency.maven-jar-plugin>
        <version.dependency.maven-rar-plugin>2.4</version.dependency.maven-rar-plugin>
        <version.dependency.maven-war-plugin>3.2.3</version.dependency.maven-war-plugin>
        <version.dependency.maven-ear-plugin>3.0.1</version.dependency.maven-ear-plugin>
        <version.dependency.maven-surefire-plugin>3.0.0-M3</version.dependency.maven-surefire-plugin>
        <version.dependency.maven-assembly-plugin>3.1.1</version.dependency.maven-assembly-plugin>
        <version.dependency.maven-compiler-plugin>3.8.1</version.dependency.maven-compiler-plugin>
        <version.dependency.maven-enforcer-plugin>3.0.0-M2</version.dependency.maven-enforcer-plugin>
        <version.dependency.maven-failsafe-plugin>2.22.2</version.dependency.maven-failsafe-plugin>
        <version.dependency.build-helper-maven-plugin>3.0.0</version.dependency.build-helper-maven-plugin>
        <version.dependency.cassandra-maven-plugin>3.6</version.dependency.cassandra-maven-plugin>
        <!-- see http://davidb.github.com/scala-maven-plugin -->
        <version.dependency.scala-maven-plugin>4.2.0</version.dependency.scala-maven-plugin>
        <version.dependency.scalatest-maven-plugin>2.0.0</version.dependency.scalatest-maven-plugin>

    </properties>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>${version.dependency.javaee}</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${version.dependency.maven-enforcer-plugin}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>1.8</version>
                                </requireJavaVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>CIMConnector</module>
        <module>CIMWeb</module>
        <module>CIMEar</module>
        <module>GridLAB-D</module>
        <module>ShortCircuit</module>
        <module>Spatial</module>
        <module>SmartMeter</module>
        <module>Ingest</module>
        <module>Simulation</module>
        <module>NetworkParameters</module>
        <module>OneOfN</module>
        <module>LowVoltage</module>
        <module>MaximumFeedIn</module>
    </modules>

</project>
